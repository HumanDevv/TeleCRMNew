    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/layout_header"
        app:cardCornerRadius="@dimen/_5sdp"
        app:strokeWidth="0dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/_1sdp"
        app:cardBackgroundColor="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/_7sdp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:text="Name"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Enter Name"
                android:textColor="@color/bluenew"
                android:paddingHorizontal="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_14ssp"
                android:layout_weight="0.7"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/_7sdp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Mobile"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="+91"

                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />
                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Enter Mobile Number"
                    android:textColor="@color/bluenew"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                   />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/_7sdp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="@dimen/_14ssp"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Email ID"/>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Enter Email Id"
                    android:textColor="@color/bluenew"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_weight="0.7"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp"
                android:background="@color/white"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="10"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:text="Alt. Mobile"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="+91"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp" />
                <EditText
                    android:id="@+id/altMobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="10"
                    android:hint="Enter Mobile Number"
                    android:textColor="@color/bluenew"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                   />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/_7sdp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Stream"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">
                    <TextView
                        android:id="@+id/tv_Stream"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/downArrow"
                        android:layout_alignParentStart="true"
                        android:background="@null"
                        android:textColor="@color/bluenew"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Select Stream"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:textSize="@dimen/_14ssp"
                  />

                    <ImageView
                        android:id="@+id/downArrow"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/arrow_down"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:tint="@color/darkgray"/>
                </RelativeLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp"
                android:background="@color/white"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Year"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">
                    <TextView
                        android:id="@+id/tv_Year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/downArrow1"
                        android:layout_alignParentStart="true"
                        android:background="@null"
                        android:textColor="@color/bluenew"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Select Year"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:textSize="@dimen/_14ssp"
                        />

                    <ImageView
                        android:id="@+id/downArrow1"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/arrow_down"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:tint="@color/darkgray"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/_7sdp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:text="Address"/>

                <EditText
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:hint="Enter Address"
                    android:textColor="@color/bluenew"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_weight="0.7"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/_7sdp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Intersted In"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">
                    <TextView
                        android:id="@+id/tv_Interested"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/downArrow2"
                        android:layout_alignParentStart="true"
                        android:background="@null"
                        android:textColor="@color/bluenew"
                        android:hint="Select Interest"
                        android:fontFamily="@font/roboto_regular"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:textSize="@dimen/_14ssp"
                        />

                    <ImageView
                        android:id="@+id/downArrow2"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/arrow_down"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:tint="@color/darkgray"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp"
                android:background="@color/white"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:text="College Name "/>

                <EditText
                    android:id="@+id/collegeName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/bluenew"
                    android:hint="Enter College Name"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_weight="0.7"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_7sdp"
                android:background="@color/white"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:textSize="@dimen/_14ssp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:text="Councelling \nDate"/>

<LinearLayout
    android:layout_width="@dimen/_30sdp"
    android:layout_height="40dp"
    android:layout_weight="0.4"
    android:backgroundTint="@color/gray"
    android:background="@drawable/rounded_background"
    >
            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:text="28-10-2020"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
           />
            </LinearLayout>
            </LinearLayout>


</LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_30sdp"
        android:text="@string/add_lead"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:id="@+id/btn_addLead"
        android:textAllCaps="false"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/roboto_regular"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@+id/layout_form"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>