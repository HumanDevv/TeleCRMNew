<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.card.MaterialCardView
    android:id="@+id/layout_campaign"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:padding="@dimen/_5sdp"
    app:strokeWidth="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Campaign Name"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivuser"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_title"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Campaign Name"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/bluenew"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toStartOf="@+id/ivuser"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_name"/>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ivuser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/bluenew"
            android:padding="10dp"
            app:cardCornerRadius="100dp"
            >

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="@dimen/_17ssp"
                android:text="S"
                android:textColor="@android:color/white"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
         />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        app:cardBackgroundColor="@color/gray"
        android:layout_marginTop="-5dp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/layout_campaign"
        app:strokeWidth="0dp"
        >

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"

            android:padding="@dimen/_5sdp"
            android:text="Campaign Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>